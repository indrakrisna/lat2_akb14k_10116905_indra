<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Btn" parent="@style/Widget.AppCompat.Button.Borderless" />
    <style name="BtnDefault" parent="Btn">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">12.5dp</item>
        <item name="android:paddingBottom">12.5dp</item>
        <item name="android:layout_marginTop">12.5dp</item>
        <item name="android:layout_marginBottom">12.5dp</item>
    </style>
    <style name="BtnBorderWhite" parent="BtnDefault">
        <item name="android:background">@drawable/btn_white_border</item>
        <item name="android:textColor">@drawable/btn_white_border</item>
    </style>
    <style name="BtnWhite" parent="BtnDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="BtnBorderBlue" parent="BtnDefault">
        <item name="android:background">@drawable/btn_blue_border</item>
        <item name="android:textColor">@drawable/btn_blue_border</item>
    </style>
</resources>